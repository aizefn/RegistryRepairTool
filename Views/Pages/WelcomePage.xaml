<Page x:Class="RegistryRepairTool.Views.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Welcome Page"
      Background="#FFF8F9FA">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF3F51B5"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFD32F2F"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#FF212121"/>
        <SolidColorBrush x:Key="LightBorderBrush" Color="#FFEEEEEE"/>

        <Style x:Key="AcceptButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="0,40,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF303F9F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1A237E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Width="644">
        <Border CornerRadius="6" 
                Background="White"
                Margin="40"
                Padding="40"
                VerticalAlignment="Center"
                BorderThickness="1"
                BorderBrush="{StaticResource LightBorderBrush}">

            <StackPanel>
                <!-- Логотип и заголовок -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,30">
                    <Path Data="M12,3L2,12V21H22V12L12,3Z" 
                          Fill="{StaticResource PrimaryBrush}"
                          Stretch="Uniform"
                          Width="32"
                          Margin="0,0,12,0"/>
                    <TextBlock Text="Registry Repair Tool" 
                               FontSize="28" 
                               FontWeight="Light"
                               Foreground="{StaticResource DarkTextBrush}"/>
                </StackPanel>

                <!-- Основной текст -->
                <TextBlock Text="Эта программа позволяет диагностировать и исправлять ошибки системного реестра Windows. Используйте её только если вы понимаете потенциальные риски."
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           FontSize="16"
                           LineHeight="24"
                           Foreground="{StaticResource DarkTextBrush}"
                           Margin="0,0,0,30"/>

                <!-- Предупреждение -->
                <Border Background="#FFFBE9E7" 
                        CornerRadius="4"
                        Padding="20"
                        BorderThickness="1"
                        BorderBrush="#FFE57373">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,10">
                            <Path Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14M11,18H12" 
                                  Fill="{StaticResource DangerBrush}"
                                  Stretch="Uniform"
                                  Width="20"
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="ВАЖНОЕ ПРЕДУПРЕЖДЕНИЕ" 
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="{StaticResource DangerBrush}"/>
                        </DockPanel>
                        <TextBlock Text="Некорректное изменение реестра может привести к нестабильной работе системы. Перед продолжением убедитесь, что:"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="20"
                                   Foreground="{StaticResource DarkTextBrush}"/>

                        <BulletDecorator Margin="10,10,0,0">
                            <BulletDecorator.Bullet>
                                <Ellipse Width="6" Height="6" Fill="{StaticResource DangerBrush}"/>
                            </BulletDecorator.Bullet>
                            <TextBlock Text="Вы создали точку восстановления системы" 
                                       Margin="5,0,0,5"/>
                        </BulletDecorator>
                        <BulletDecorator Margin="10,5,0,0">
                            <BulletDecorator.Bullet>
                                <Ellipse Width="6" Height="6" Fill="{StaticResource DangerBrush}"/>
                            </BulletDecorator.Bullet>
                            <TextBlock Text="Вы понимаете последствия своих действий" 
                                       Margin="5,0,0,5"/>
                        </BulletDecorator>
                    </StackPanel>
                </Border>

                <Button Content="ПРИНИМАЮ"
        Click="AcceptButton_Click"
        Style="{StaticResource AcceptButtonStyle}"/> 
            </StackPanel>
        </Border>
    </Grid>
</Page>