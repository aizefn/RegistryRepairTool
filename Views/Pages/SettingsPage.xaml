<Page x:Class="RegistryRepairTool.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewModels="clr-namespace:RegistryRepairTool.ViewModels"
      Title="Настройки"
      Background="#FFF8F9FA"
      FontFamily="Segoe UI">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#FF333333"/>
        </Style>

        <Style x:Key="SettingCheckBox" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF444444"/>
        </Style>

        <Style x:Key="PathOptionRadioButton" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,5,15,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="PathTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Margin" Value="20,5,5,5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        </Style>

        <Style x:Key="BrowseButton" TargetType="Button">
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Background" Value="#FF3F51B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="20" Width="400">
            <!-- Основные настройки -->
            <TextBlock Text="Основные настройки" Style="{StaticResource SectionHeader}"/>
            <CheckBox Content="Запускать при старте Windows" 
                     IsChecked="{Binding RunAtStartup}"
                     Style="{StaticResource SettingCheckBox}"/>

            <!-- Автоматизация -->
            <TextBlock Text="Автоматизация" Style="{StaticResource SectionHeader}" Margin="0,15,0,0"/>
            <CheckBox Content="Сканировать при запуске программы" 
                     IsChecked="{Binding AutoScanOnStartup}"
                     Style="{StaticResource SettingCheckBox}"/>

            <!-- Уведомления и звук -->
            <TextBlock Text="Уведомления и звук" Style="{StaticResource SectionHeader}" Margin="0,15,0,0"/>
            <CheckBox Content="Показывать уведомление после исправлений" 
                     IsChecked="{Binding ShowNotificationAfterFix}"
                     Style="{StaticResource SettingCheckBox}"/>
            <CheckBox Content="Воспроизводить звук после сканирования" 
                     IsChecked="{Binding PlaySoundOnScanComplete}"
                     Style="{StaticResource SettingCheckBox}"/>

            <!-- Журналирование -->
            <TextBlock Text="Журналирование" Style="{StaticResource SectionHeader}" Margin="0,15,0,0"/>
            <CheckBox Content="Включить сохранение логов исправлений" 
                     IsChecked="{Binding SaveLogsToFile}"
                     Style="{StaticResource SettingCheckBox}"/>

            <StackPanel Margin="20,5,0,0" 
                       Visibility="{Binding SaveLogsToFile, Converter={StaticResource BooleanToVisibilityConverter}}">
                <RadioButton Content="Использовать папку по умолчанию" 
                            IsChecked="{Binding UseDefaultLogPath}"
                            GroupName="LogPathGroup"
                            Style="{StaticResource PathOptionRadioButton}"/>

                <RadioButton Content="Указать пользовательскую папку" 
                            IsChecked="{Binding UseCustomLogPath}"
                            GroupName="LogPathGroup"
                            Style="{StaticResource PathOptionRadioButton}"/>

                <StackPanel Orientation="Horizontal" 
                           Visibility="{Binding UseCustomLogPath, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,5,0,10">
                    <TextBox Text="{Binding CustomLogPath}" 
                             Style="{StaticResource PathTextBox}"
                             IsEnabled="{Binding UseCustomLogPath}"/>

                    <Button Content="Обзор" 
                            Command="{Binding BrowseLogFolderCommand}"
                            Style="{StaticResource BrowseButton}"/>
                </StackPanel>

                <TextBlock Text="Логи будут сохраняться в формате: RegistryFix_YYYY-MM-DD.log"
                          FontSize="12"
                          Foreground="#FF666666"
                          Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Кнопки сохранения/сброса -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сбросить настройки" 
                        Margin="0,0,10,0"
                        Command="{Binding ResetToDefaultCommand}"/>
                <Button Content="Сохранить" 
                        Padding="15,5" 
                        Background="#FF3F51B5" 
                        Foreground="White"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>