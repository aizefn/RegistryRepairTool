<Page x:Class="RegistryRepairTool.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Главная"
      Background="Transparent"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">

    <Grid>
        
            <StackPanel Margin="20">
            <!-- Заголовок с анимированным градиентом -->
            <Border CornerRadius="12" 
         Padding="20" 
         SnapsToDevicePixels="True"
         Height="98">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{Binding Source={StaticResource PrimaryBrush}, Path=Color}" Offset="0"/>
                        <GradientStop Color="#FF6A1B9A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="Добро пожаловать в Registry Repair Tool"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="White"
                    TextOptions.TextFormattingMode="Display"/>
                    <TextBlock Text="Ваш инструмент для оптимизации системы"
                    FontSize="14"
                    Foreground="#EEFFFFFF"
                    Margin="0,5,0,0"
                    TextOptions.TextFormattingMode="Display"/>
                </StackPanel>
            </Border>

            <!-- Быстрые действия -->

            <UniformGrid Columns="3" Margin="0,0,0,10">
                    <!-- Карточка быстрого сканирования -->

                <!-- Карточка очистки -->

                <!-- Карточка резервной копии -->
                    <Border CornerRadius="8" 
            Background="White" 
            Margin="5" 
            Padding="0"
            Effect="{DynamicResource ShadowEffect}"
            SnapsToDevicePixels="True"/>
            </UniformGrid>

                <!-- Статистика системы -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- График использования -->
                <Border CornerRadius="8" 
        Background="{Binding SystemInfo.HasError, Converter={StaticResource ErrorToBackgroundConverter}}"
        Margin="0,0,10,0" 
        Padding="15"
        Effect="{DynamicResource ShadowEffect}"
        SnapsToDevicePixels="True">
                    <StackPanel>
                        <TextBlock Text="Информация о системе"
                   FontSize="16"
                   FontWeight="Medium"
                   Margin="0,0,0,10"
                   Foreground="{Binding SystemInfo.HasError, Converter={StaticResource ErrorToForegroundConverter}}"
                   TextOptions.TextFormattingMode="Display"/>

                        <!-- Версия ОС -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <materialDesign:PackIcon 
                Kind="MicrosoftWindows" 
                Width="16"
                Foreground="{Binding SystemInfo.HasError, Converter={StaticResource ErrorToIconColorConverter}, ConverterParameter=#FF2196F3}"
                Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding SystemInfo.WindowsVersion, FallbackValue='Не удалось определить'}"
                       Foreground="{Binding SystemInfo.HasError, Converter={StaticResource ErrorToForegroundConverter}}"
                       FontSize="13"
                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>

                        <!-- Разрядность системы -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <materialDesign:PackIcon 
                Kind="Chip" 
                Width="16"
                Foreground="{Binding SystemInfo.HasError, Converter={StaticResource ErrorToIconColorConverter}, ConverterParameter=#FF4CAF50}"
                Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding SystemInfo.SystemType, FallbackValue='Не удалось определить'}"
                       Foreground="{Binding SystemInfo.HasError, Converter={StaticResource ErrorToForegroundConverter}}"
                       FontSize="13"
                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <materialDesign:PackIcon Kind="ShieldCheck" Foreground="#FF2196F3" Margin="0,0,5,0"/>
                            <TextBlock Text="Система защищена" Foreground="#FF333333" FontSize="13"/>
                        </StackPanel>

                    </StackPanel>
                </Border>
                    

                <!-- Последние ошибки -->
                    <Border CornerRadius="8" 
                            MaxHeight="156"
        Background="White" 
        Grid.Column="1" 
        Margin="10,0,0,0" 
        Padding="15" 
        Effect="{DynamicResource ShadowEffect}"
        SnapsToDevicePixels="True">
                        <StackPanel>
                            <TextBlock Text="Последние ошибки"
                   FontSize="16"
                   FontWeight="Medium"
                   Margin="0,0,0,10"
                   TextOptions.TextFormattingMode="Display"/>

                            <!-- Контейнер для состояний -->
                            <Grid>
                                <!-- Состояние когда есть ошибки -->
                                <StackPanel Visibility="{Binding RecentErrors.Count, Converter={StaticResource CountToVisibility}}">
                                    <ListView ItemsSource="{Binding RecentErrors}"
                          Height="82"
                          BorderThickness="0"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          SnapsToDevicePixels="True">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                       TextWrapping="Wrap"
                                       Foreground="#FF333333"
                                       FontSize="12"
                                       Margin="0,2"
                                       TextOptions.TextFormattingMode="Display"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <Button
                                Style="{DynamicResource ModernFlatButton}" SnapsToDevicePixels="True" Content="Показать все" Command="{Binding ShowAllErrorsCommand}"/>

                                    <Button Content="Показать все"
                        HorizontalAlignment="Right"
                        Style="{DynamicResource ModernFlatButton}"
                        Margin="0,5,0,0"
                        SnapsToDevicePixels="True"
                        Command="{Binding ShowAllErrorsCommand}"/>
                                </StackPanel>

                                <!-- Состояние когда нет ошибок -->
                                <StackPanel Visibility="{Binding RecentErrors.Count, Converter={StaticResource InverseCountToVisibility}}">
                                    <materialDesign:PackIcon Kind="CheckCircleOutline" 
                                         Width="40"
                                         Height="40"
                                         Foreground="#FF4CAF50"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,10"/>
                                    <TextBlock Text="Ошибок не обнаружено"
                           FontSize="14"
                           Foreground="#FF666666"
                           HorizontalAlignment="Center"
                           TextOptions.TextFormattingMode="Display"/>
                                    <TextBlock Text="Система работает стабильно"
                           FontSize="12"
                           Foreground="#FF999999"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"
                           TextOptions.TextFormattingMode="Display"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Советы по оптимизации -->
                <Border CornerRadius="8" 
                        Background="White" 
                        Margin="0,20,0,0" 
                        Padding="15"
                        Effect="{DynamicResource ShadowEffect}"
                        SnapsToDevicePixels="True">
                    <StackPanel>
                        <TextBlock Text="Советы по оптимизации"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"
                                   TextOptions.TextFormattingMode="Display"/>

                        <ItemsControl ItemsSource="{Binding DataContext.OptimizationTips, 
                                                   RelativeSource={RelativeSource AncestorType=Page}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <materialDesign:PackIcon Kind="CheckCircle" 
                                                                Width="16"
                                                                Foreground="#FF4CAF50"
                                                                Margin="0,0,5,0"
                                                                SnapsToDevicePixels="True"/>
                                        <TextBlock Text="{Binding}" 
                                                   TextWrapping="Wrap"
                                                   Foreground="#FF333333"
                                                   FontSize="13"
                                                   TextOptions.TextFormattingMode="Display"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        
    </Grid>
</Page>