<Window x:Class="RegistryRepairTool.Views.ValueEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:winreg="clr-namespace:Microsoft.Win32;assembly=Microsoft.Win32.Registry"
        Title="Редактирование значения реестра"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <ObjectDataProvider x:Key="RegistryValueKinds" 
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="winreg:RegistryValueKind"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- Common CornerRadius style for all controls -->
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <!-- Button style with rounded corners -->
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Border.CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="RaisedButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Border.CornerRadius" Value="4"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="8"
            Margin="8"
            Background="{DynamicResource MaterialDesignCardBackground}"
            Effect="{StaticResource MaterialDesignShadowDepth2}"
            MouseDown="Border_MouseDown">
        <StackPanel Margin="16">
            <TextBox material:HintAssist.Hint="Имя значения"
                     Text="{Binding ValueName, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,0,0,8"/>

            <ComboBox material:HintAssist.Hint="Тип значения"
                      SelectedValue="{Binding ValueKind}"
                      ItemsSource="{Binding Source={StaticResource RegistryValueKinds}}"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      Margin="0,0,0,8"/>

            <TextBox material:HintAssist.Hint="Значение"
                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,0,0,16"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinHeight="120"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ОТМЕНА"
                        IsCancel="True"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,8,0"/>
                <Button Content="ОК" 
                        IsDefault="True"
                        Click="OK_Click"
                        Style="{StaticResource RaisedButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>