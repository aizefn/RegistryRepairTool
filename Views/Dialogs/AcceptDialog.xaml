<Window x:Class="RegistryRepairTool.Views.Dialogs.AcceptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение ответственности"
        Width="450"
        Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Тень вокруг окна -->
    <Border Margin="10" Effect="{StaticResource ShadowEffect}">
        <Grid Background="#FFF8F9FA">
            <!-- Заголовок -->
            <Border Background="#FF3F51B5" Height="40" 
                    CornerRadius="4,4,0,0">
                <TextBlock Text="Требуется подтверждение"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="20,0"
                           FontWeight="SemiBold"/>
            </Border>

            <!-- Основное содержимое -->
            <Grid Margin="20" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Иконка предупреждения -->
                <Path Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14M11,18H12"
                      Fill="#FFD32F2F"
                      Stretch="Uniform"
                      Width="30"
                      HorizontalAlignment="Left"
                      Margin="301,19,0,1"/>
                <Path Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14M11,18H12"
      Fill="#FFD32F2F"
      Stretch="Uniform"
      Width="30"
      HorizontalAlignment="Left"
      Margin="70,19,0,1"/>

                <!-- Текст -->
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"
                           Text="Использование этого инструмента может повлиять на стабильность системы. Пожалуйста, подтвердите, что вы понимаете риски."
                           FontSize="14"
                           LineHeight="20"
                           Foreground="#FF212121"
                           Margin="0,-95,0,74"/>

                <!-- Чекбокс -->
                <CheckBox Grid.Row="2" x:Name="AcceptCheckBox" 
                          Content="Я принимаю ответственность за все возможные последствия"
                          Foreground="#FF212121"
                          FontSize="13"
                          HorizontalAlignment="Center"
                          IsChecked="False" Margin="0,46,0,-47">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#10000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>
            </Grid>

            <!-- Кнопки -->
            <Border BorderThickness="0,1,0,0" BorderBrush="#FFEEEEEE" 
                    VerticalAlignment="Bottom" Background="White"
                    CornerRadius="0,0,4,4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button Content="ОТМЕНА" 
                            Style="{StaticResource ModernFlatButton}"
                            Click="CancelButton_Click" Height="30" Width="70"/>
                    <Button Content="ПРИНЯТЬ" 
                            
                            Style="{StaticResource ModernFlatButton}"
                            Background="#FF3F51B5"
                            Foreground="White"
                            Click="AcceptButton_Click"
                            Margin="10,0,0,0" Width="70"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>